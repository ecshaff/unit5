<p id="notice"><%= notice %></p>

<h1>Hiking News</h1>
<div class="post">
    <% @posts.each do |post| %>
    <div class="link row clearfix">
        Location: <%= post.location%>
        <%= post.title %>
        Elevation: <%= post.elevation %>
        Distance: <%= post.distance %>
        Level: <%= post.level %>
        <button><%= link_to 'View', post %></button>
        <%if post.user == current_user %>
        <button><%= link_to 'Edit Venture', edit_post_path(post) %></button>
        <button><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        <% end %>
        
      <small class="author">Posted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %></small>
    
    <div class="btn-group">
      <%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Like
        <%= post.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down">
        Dislike
        <%= post.get_downvotes.size %>
      <% end %>
    </div>
    <% end %>
</div>
<br>




  